{
  "scripts": {
    "build": "parcel build",
    "lint": "eslint . --fix",
    "lint-check": "prettier --check static/to_compile",
    "watch": "parcel watch",
    "format:check": "prettier --check static/to_compile",
    "format": "prettier static/to_compile --write"
  },
  "source": [
    "static/to_compile/entrypoints/main.ts",
    "static/to_compile/entrypoints/main.css"
  ],
  "targets": {
    "default": {
      "distDir": "./static/compiled"
    }
  },
  "browserslist": [
    "defaults",
    "iOS 14"
  ],
  "@parcel/transformer-css": {
    "errorRecovery": true
  },
  "prettier": {
    "trailingComma": "all",
    "printWidth": 88,
    "semi": false
  },
  "dependencies": {
    "dompurify": "^3.2.3",
    "marked": "^15.0.4"
  },
  "devDependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo": "^8.0.20",
    "@parcel/transformer-inline-string": "^2.16.1",
    "@types/dompurify": "^3.2.0",
    "@types/jest": "^30.0.0",
    "@types/leaflet": "^1.9.16",
    "@types/lodash": "^4.17.21",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint-config-love": "^134.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint": "^9.39.1",
    "parcel": "^2.16.1",
    "postcss-nesting": "^13.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "optionalDependencies": {
    "@parcel/watcher-linux-x64-glibc": "^2.5.1"
  }
